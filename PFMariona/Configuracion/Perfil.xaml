<Window x:Class="uMind.Perfil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uMind"
        mc:Ignorable="d"
        Title="Perfil" Height="600" Width="1100" Background="#97B5DD" WindowStartupLocation="CenterScreen" WindowStyle="None" MaxWidth="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"></ColumnDefinition>
            <ColumnDefinition Width="184*"></ColumnDefinition>
            <ColumnDefinition Width="36*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--NOMBRE APLICACIÓN-->
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Background="#97b5dd" Foreground="White" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" FontSize="70">uMind</TextBlock>

        <!--MENÚ-->
        <!--#region HISTORIA PACIENTES-->
        <TextBlock Grid.Column="0" Grid.Row="2" x:Name="btnPacientes" Foreground="#FFFDFDFD" FontWeight="Bold" Background="#418661" TextAlignment="Center">HISTORIA PACIENTES</TextBlock>
        <Button Grid.Column="0" Grid.Row="2"  Background="#6AA5AF" Foreground="White" Content="Nuevo" Margin="0,29,0,0" Grid.RowSpan="2"/>
        <Button Grid.Column="0" Grid.Row="3" Background="#6AA5AF" Foreground="White" Content="Buscar" Margin="0,29,0,0" Grid.RowSpan="2"/>
        <!--#endregion-->

        <!--#region AGENDA CITAS-->
        <TextBlock Grid.Column="0" Grid.Row="6" x:Name="btnCitas" Background="#418661" Foreground="White" FontWeight="Bold" TextAlignment="Center">AGENDA DE CITAS</TextBlock>
        <Button Grid.Column="0" Grid.Row="6" x:Name="btnCalendario"  Background="#6AA5AF" Foreground="White" Content="Calendario" Margin="0,29,0,0" Grid.RowSpan="2"/>
        <Button Grid.Column="0" Grid.Row="7" x:Name="btnNuevaCita" Background="#6AA5AF" Foreground="White" Content="Gestión de citas" Margin="0,29,0,0" Grid.RowSpan="2"/>
        <!--#endregion-->

        <!--#region CONFIGURACIÓN-->
        <TextBlock Grid.Column="0" Grid.Row="10" x:Name="btnConfiguracion" Background="#418661" Foreground="White" FontWeight="Bold" TextAlignment="Center">CONFIGURACIÓN</TextBlock>
        <Button Grid.Column="0" Grid.Row="11" x:Name="btnPerfil" Background="#6AA5AF" Foreground="White"  Content="Perfil" />
        <Button Grid.Column="0" Grid.Row="12" x:Name="btnCerrarSesion" Background="#6AA5AF" Foreground="White" Content="Cerrar sesión" />
        <!--#endregion-->

        <!--ELEMENTOS-->

        <TextBlock Grid.Column="1" Grid.Row="9" FontSize="50" TextAlignment="Center" Grid.RowSpan="4" VerticalAlignment="Center" HorizontalAlignment="Center">LOGO</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="6" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">MARIONA GUÀRDIA CAMPANY</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="5" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">marionaguardia19@gmail.com</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="4" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">649437248</TextBlock>
        <!--Aquí se tendrá que insertar el logo-->

        <!--BOTÓN SALIR-->
        <Button Grid.Column="0" Grid.Row="14" Grid.RowSpan ="3" Name="btnSalir"  Foreground="White" FontWeight="Bold" Background="#418661" Content="SALIR" Margin="0,29,0,0" Click="btnSalir_Click"/>
    </Grid>
</Window>

<Window x:Class="uMind.RegistrarPaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:uMind"
        mc:Ignorable="d"
        Title="RegistrarPaciente" Height="800" Width="1400" Background="#97B5DD" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>

            <!--COLUMNAS-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"></ColumnDefinition>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="42*"></ColumnDefinition>
                <ColumnDefinition Width="147*"></ColumnDefinition>
                <ColumnDefinition Width="378*"></ColumnDefinition>
                <ColumnDefinition Width="129*"></ColumnDefinition>
                <ColumnDefinition Width="181*"></ColumnDefinition>
                <ColumnDefinition Width="60*"></ColumnDefinition>
                <ColumnDefinition Width="130*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="197*"></ColumnDefinition>
                <ColumnDefinition Width="32*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--FILAS-->
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Grid.ColumnSpan="12" Grid.RowSpan="18" >
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >


                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                        <GradientStop Color="#FF7FC5C7" Offset="0.25"></GradientStop>
                        <GradientStop Color="#FF778AD4" Offset="0.75"></GradientStop>
                        <GradientStop Color="#FF6AE4E1" Offset="0.25"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>


            </Border>


            <TextBlock Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="8" FontWeight="Bold" FontSize="30" Foreground="#FF0B4554" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontFamily="Arial Black"  >REGISTRO DE PACIENTES</TextBlock>
            <!--#region TEXTBLOCK-->
            <TextBlock Grid.Column="3" Grid.Row="2" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="90,0,0,0" Foreground="#FF121B40" Height="22" Width="30">ID</TextBlock>
            <TextBlock Grid.Column="6" Grid.Row="2" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF121B40" Height="22" Width="178" >PSICÓLOGO ASIGNADO</TextBlock>

            <TextBlock Grid.Column="3" Grid.Row="4" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="51,0,0,0" Foreground="#FF121B40" Height="21" Width="69" >NOMBRE</TextBlock>
            <TextBlock Grid.Column="5" Grid.Row="4" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF121B40" Height="21" Width="62" >CORREO</TextBlock>

            <TextBlock Grid.Column="3" Grid.Row="6" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="36,0,0,0" Foreground="#FF121B40" Height="21" Width="84">APELLIDOS</TextBlock>
            <TextBlock Grid.Column="5" Grid.Row="6" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="16,0,0,0" Foreground="#FF121B40" Height="21" Width="80">TELÉFONO</TextBlock>

            <TextBlock Grid.Column="3" Grid.Row="8" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF121B40" Height="22" Width="92">POBLACIÓN</TextBlock>
            <TextBlock Grid.Column="6" Grid.Row="8" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="3,0,0,0" Foreground="#FF121B40" Height="22" Width="181" Grid.ColumnSpan="2">FECHA DE NACIMIENTO</TextBlock>

            <TextBlock Grid.Column="3" Grid.Row="10" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" Foreground="#FF121B40" Height="21" Width="40">SEXO</TextBlock>
            <TextBlock Grid.Column="6" Grid.Row="10" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FF121B40" Height="21" Width="128">FECHA DE INICIO</TextBlock>

            <TextBlock Grid.Column="4" Grid.Row="12" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="80,0,0,0" Text="GENOGRAMA" Foreground="#FF121B40" Height="22" Width="104"/>

            <TextBlock Grid.Column="4" Grid.Row="14" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="39,0,0,0" Foreground="#FF121B40" Height="21" Width="149" Text="HISTORIA CLÍNICA"/>

            <!--#endregion-->

            <!--#region TEXTBOX-->
            <TextBox Name="TextID" Grid.Row="2" Grid.Column="4" Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16" IsReadOnly="True"/>

            <TextBox Name="TextNombre" Grid.Row="4" Grid.Column="4" Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16"/>
            <TextBox Name="TextCorreo" Grid.Row="4" Grid.Column="6" Grid.ColumnSpan="3" Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16" Margin="3,0,0,0"/>

            <TextBox Name="TextApellidos" Grid.Row="6" Grid.Column="4" Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16"/>
            <TextBox Name="TextTelefono"  Grid.Row="6" Grid.Column="5"  Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16" Margin="128,0,0,0" Grid.ColumnSpan="4"/>

            <TextBox Name="TextPoblacion" Grid.Row="8" Grid.Column="4" Padding="10,5,0,0" BorderBrush="#FFC1D2EA" BorderThickness="0,0,0,3" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Height="33" Width="348"  FontStyle="Normal" FontFamily="Segoe UI" Foreground="Black" Background="Transparent" FontSize="16"/>
            <!--#endregion-->

            <!--#region COMBOBOX-->
            <ComboBox Name="ComboBoxDoctor" Grid.Column="7" Grid.Row="1" Margin="30,34,123,0" Grid.RowSpan="2" Grid.ColumnSpan="4" />

            <ComboBox Name="ComboBoxSexo" Grid.Column="4" Grid.Row="10" Margin="0,0,3,0" />
            <!--#endregion-->

            <!--#region DATAPICKER-->
            <DatePicker Name="DatePickerNacimiento" Grid.Row="8" Grid.Column="7" Grid.ColumnSpan="4" Margin="13,0,0,34" Grid.RowSpan="2"></DatePicker>
            <DatePicker Name="DatePickerAlta" Grid.Row="10" Grid.Column="7" Grid.ColumnSpan="4" Margin="13,0,0,0"/>
            <!--#endregion-->

            <!--#region BOTONES-->
            <Button Grid.Column="5" Grid.Row="11" Margin="0,34,0,0" Grid.RowSpan="2">GENERAR</Button>

            <Button Name="btnHistorialClinico"  Grid.Column="5" Grid.Row="13" Margin="0,33,0,33" Grid.RowSpan="3">INSERTAR</Button>

            <Button Name="btnGuardar" Click="btnGuardar_Click" Grid.Column="7" Grid.Row="15" Foreground="#FF002E9E" FontFamily="Bahnschrift SemiBold" FontWeight="Bold" FontSize="16" BorderBrush="{x:Null}" Background="#FFA2C0EA" Margin="13,0,0,0" Grid.ColumnSpan="2">GUARDAR

            </Button>
            <Button Grid.Column="3" Name="btnAtras" Click="btnAtras_Click" Background="{x:Null}" Margin="27,34,57,33" BorderBrush="{x:Null}" Foreground="{x:Null}">
                <Image Source="/Imagenes/atras.png"/>
            </Button>



            <!--#endregion-->

        </Grid>
    </ScrollViewer>
</Window>
